<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_default" />

    <com.ftinc.kit.widget.EmptyView
        android:id="@+id/empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"

        app:emptyIcon="@mipmap/ic_launcher"
        app:emptyIconSize="100dp"
        app:emptyIconColor="?attr/colorPrimary"

        app:emptyMessageColor="@color/black26"
        app:emptyMessage="@string/empty_message_drawer"
        app:emptyMessageTypeface="regular"
        app:emptyMessageTextSize="18sp"

        app:emptyActionText="Lets Go"
        app:emptyActionColor="@color/red_400"
        app:emptyActionTextSize="16sp"
        />

</LinearLayout>