<resources>

    <declare-styleable name="BaseTheme">
        <attr name="toolbarTheme" format="reference" />
        <attr name="toolbarPopupTheme" format="reference" />

        <attr name="colorTextPrimary" format="reference|color" />
        <attr name="colorTextPrimaryInverse" format="reference|color" />
        <attr name="colorTextSecondary" format="reference|color" />
        <attr name="colorTextSecondaryInverse" format="reference|color" />

        <!-- TODO: Add more theme attributes -->

    </declare-styleable>

    <declare-styleable name="ScrimInsetsView">
        <attr name="insetForeground" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="BezelImageView">
        <attr name="maskDrawable" format="reference" />
        <attr name="borderDrawable" format="reference" />
        <attr name="desaturateOnPress" format="boolean" />
    </declare-styleable>

    <declare-styleable name="EmptyView">
        <attr name="emptyAccentColor" format="reference|color" />
        <attr name="emptyMessage" format="reference|string" />
        <attr name="emptyIcon" format="reference" />
        <attr name="emptyIconSize" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="ProgressIndicator">
        <attr name="progressColor" format="color|reference" />
        <attr name="max" format="integer" />
        <attr name="progress" format="integer" />
    </declare-styleable>

</resources>